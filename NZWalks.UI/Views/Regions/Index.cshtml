@model IEnumerable<NZWalks.UI.Models.DTO.RegionDto>

<h1 class="mt-3">Regions</h1>

<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-secondary" asp-controller="Regions" asp-action="Add">Add Region</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Code</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Region in Model)
        {
            <tr>
                <td>@Region.Id</td>
                <td>@Region.Code</td>
                <td>@Region.Name</td>
                <td>
                    <a asp-controller="Regions" asp-action="Edit" asp-route-id="@Region.Id"
                       class="btn btn-light">Edit</a>

                    <!-- Delete Button wrapped in a form to send a POST request -->
                    <form asp-controller="Regions" asp-action="Delete" asp-route-id="@Region.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">Delete</button>
                        @Html.AntiForgeryToken()
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>